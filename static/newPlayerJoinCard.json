{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "text": ""
    },
    {
      "type": "TextBlock",
      "text": "Current Players in the Room:"
    },
    {
      "type": "TextBlock",
      "text": "",
      "wrap": true
    },
    {
      "type": "Input.ChoiceSet",
      "id": "language",
      "style": "expanded",
      "value": "en-US",
      "choices": [
        {
          "title": "English",
          "value": "en-US"
        },
        {
          "title": "简体中文",
          "value": "zh-CN"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Click to Start Game",
      "data": {
        "sessionCode": "${code}",
        "callbackAction": "${callbackAction}"
      }
    }
  ]
}
