{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "spacing": "medium",
      "size": "large",
      "weight": "bolder",
      "text": "${displayText}",
      "wrap": true,
      "maxLines": 0
    },
    {
      "type": "Image",
      "url": "${scorePic}",
      "size": "stretch"
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": []
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": []
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": []
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": []
            }
          ]
        }
      ]
    }
  ]
}