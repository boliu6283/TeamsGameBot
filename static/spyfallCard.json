{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "spacing": "medium",
      "size": "large",
      "weight": "bolder",
      "text": "All Locations"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": []
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": []
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": []
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Your location: ",
      "weight": "bolder",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Your role: ",
      "weight": "bolder",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "spacing": "medium",
      "size": "small",
      "weight": "bolder",
      "text": "${note}"
    },
    {}
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "${btnName}",
      "data": 
      {
        "playerVote": "${index}",
        "spyIdx": "${spyIdx}",
        "sessionCode": "${sessionCode}"
      }
    }
  ]
}