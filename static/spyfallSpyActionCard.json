{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "text": "Note: you only have one chance to guess."
    },
    {
      "type": "Input.Text",
      "id": "spyGuess"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "${btnName}",
      "data": {
        "spyIdx": "${spyIdx}",
        "sessionCode": "${sessionCode}",
        "location": "${location}"
      }
    }
  ]
}
