{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "spacing": "medium",
      "size": "default",
      "weight": "bolder",
      "text": "${mainMenuText}",
      "wrap": true,
      "maxLines": 0
    },
    {
      "type": "Image",
      "url": "${mainMenuPic}",
      "size": "stretch"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "🕹️Game",
      "data": {
        "mainMenuChoice": "game"
      }
    },
    {
      "type": "Action.Submit",
      "title": "📖Rank",
      "data": {
        "mainMenuChoice": "rank"
      }
    },
    {
      "type": "Action.Submit",
      "title": "⚙️Settings",
      "data": {
        "mainMenuChoice": "settings"
      }
    }
  ]
}
